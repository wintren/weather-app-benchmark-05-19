<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LocationsFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="36dp"
        android:gravity="center_horizontal"
        android:text="LOCATIONS"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/londonButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:text="London"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tokyoButton"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/tokyoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tokyo"
        app:layout_constraintLeft_toRightOf="@id/londonButton"
        app:layout_constraintRight_toLeftOf="@id/dallasButton"
        app:layout_constraintTop_toTopOf="@id/londonButton" />

    <Button
        android:id="@+id/dallasButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dallas"
        app:layout_constraintLeft_toRightOf="@id/tokyoButton"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/londonButton" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addLocationFAB"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="16dp"
        android:src="@drawable/icon_add_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>